  const env = loadEnv(mode, process.cwd(), '');

  return {
          base: '/',
    plugins: [react(), svgr()],
    resolve: {
      alias: {
        '@': path.resolve(__dirname, './src'),
      },
    },
    server: {
      host: true,
      port: 5173,
      watch: {
        usePolling: true,
      },
      allowedHosts: [
        'localhost',
        'culf.ai'
      ]
    },
    define: {
      'process.env': env,
    },
    build: {
      outDir: 'build',
      sourcemap: mode === 'development',
      minify: mode === 'production',
      rollupOptions: {
        output: {
          manualChunks: {
            vendor: ['react', 'react-dom', 'react-router-dom'],
          },
        },
      },
    },
  };
});
